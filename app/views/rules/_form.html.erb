<%= form_for([@club, @club.rules.build]) do |f| %>
  <div class="field">
    <%= f.label :title %> <%= f.text_field :title %>
    <%= f.label :description %> <%= f.text_area :description %>
    <%= f.label :points %> <%= f.text_field :points %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>